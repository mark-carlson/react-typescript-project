{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "*": ["*", "src/*", "test/*"]
        },
        "incremental": true,
        "module": "commonjs",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "target": "es6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist"
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "test/**/*"]
}
